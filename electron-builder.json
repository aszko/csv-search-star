{
  "appId": "com.everland.doxsearcher",
  "productName": "Everland Dox Searcher",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "main.js",
    "preload.js"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "public/favicon.ico"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "public/favicon.ico",
    "uninstallerIcon": "public/favicon.ico",
    "installerHeaderIcon": "public/favicon.ico"
  },
  "portable": {
    "artifactName": "EverlandDoxSearcher-Portable.exe"
  }
}
